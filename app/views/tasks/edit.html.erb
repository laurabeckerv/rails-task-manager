<%= form_with model: @task do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <p>
  <%= f.label :details, "Details" %>
  <%= f.text_field :details %>
  <p>
  <%= f.label :completed, "Have you already completed the task?" %>
  <%= f.check_box :completed %>
  <p>
  <%= f.submit %>
<% end %>
